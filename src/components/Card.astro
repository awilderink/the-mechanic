---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'div'>;
const { class: _class, ...props } = Astro.props;
---

<div
  {...props}
  class={twMerge(
    "bg-white flex flex-col rounded-xl overflow-hidden px-6 py-8",
    _class
  )}
>
  <slot />
</div>
