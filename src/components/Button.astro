---
import { cva, type VariantProps } from "class-variance-authority";
import type { HTMLAttributes } from "astro/types";

const button = cva("py-4 px-8 rounded-full font-semibold", {
  variants: {
    variant: {
      primary: "bg-primary text-white",
      secondary: "bg-secondary text-white",
      tertiary: "bg-tertiary text-white",
      outline: "bg-transparent border border-white border-1 text-white",
    },
  },
});

interface Props extends HTMLAttributes<"button">, VariantProps<typeof button> {}

const { variant = "primary", class: _class, ...props } = Astro.props;
---

<button class={button({ variant, class: _class })} {...props}>
  <slot />
</button>
