---
import { cva, type VariantProps } from "class-variance-authority";
import type { HTMLAttributes } from "astro/types";

const button = cva("py-4 px-8 rounded-full", {
  variants: {
    variant: {
      primary: "bg-primary text-white",
      secondary: "bg-secondary text-white",
      tertiary: "bg-tertiary text-white",
      outline: "bg-transparent border border-white border-1 text-white",
    },
    size: {
      sm: "text-sm font-neutral",
      md: "text-md font-semibold",
      lg: "text-lg font-semibold",
    },
  },
  defaultVariants: {
    variant: "primary",
    size: "md",
  },
});

interface Props extends HTMLAttributes<"button">, VariantProps<typeof button> {}

const {
  variant = "primary",
  size = "md",
  class: _class,
  ...props
} = Astro.props;
---

<button class={button({ variant, size, class: _class })} {...props}>
  <slot />
</button>
