---
import { PortableText } from "astro-portabletext";
import type { ContentSection } from "../../sanity/types";
import Button from "../Button.astro";
import Title from "../Title.astro";

interface Props {
  block: ContentSection;
}

const { block } = Astro.props;
---

<section class="container mx-auto max-w-6xl py-8 px-4">
  {
    block.sectionTitle && (
      <Title variant="tertiary">
        <span class="text-zinc-500">{block.sectionTitle}</span>
      </Title>
    )
  }
  <div class="flex flex-col gap-2 md:flex-row md:gap-12">
    <div class="basis-3/5">
      {
        block.mainTitle && (
          <div class="mt-2 text-xl text-primary md:text-4xl md:leading-normal">
            {block.mainTitle}
          </div>
        )
      }
    </div>
    <div class="basis-2/5 self-end">
      {block.body && <PortableText value={block.body} />}
      {
        block.buttonText && block.buttonUrl && (
          <a href={block.buttonUrl}>
            <Button size="sm" class="mt-6" variant="primary">
              {block.buttonText}
            </Button>
          </a>
        )
      }
    </div>
  </div>
</section>
