---
import Button from '../Button.astro';
import Title from '../Title.astro';

interface Props {
	block: {
		sectionTitle?: string;
		mainTitle?: string;
		description?: string;
		buttonText?: string;
		buttonUrl?: string;
	};
}

const { block } = Astro.props;
---

<div class="flex flex-col gap-2 md:flex-row md:gap-12">
	<div class="basis-3/5">
		{block.sectionTitle && (
			<Title variant="tertiary">
				<span class="text-zinc-500">{block.sectionTitle}</span>
			</Title>
		)}
		{block.mainTitle && (
			<div class="mt-2 text-xl text-primary md:text-4xl md:leading-normal">
				{block.mainTitle}
			</div>
		)}
	</div>
	<div class="basis-2/5 self-end">
		{block.description && (
			<p class="font-light">
				{block.description}
			</p>
		)}
		{block.buttonText && block.buttonUrl && (
			<a href={block.buttonUrl}>
				<Button size="sm" class="mt-6" variant="primary">
					{block.buttonText}
				</Button>
			</a>
		)}
	</div>
</div>