---
import CardSection from "./blocks/CardSection.astro";
import ContentSection from "./blocks/ContentSection.astro";
import FeaturedVoorraadSection from "./blocks/FeaturedVoorraadSection.astro";
import HeroImageSection from "./blocks/HeroImageSection.astro";
import HeroSection from "./blocks/HeroSection.astro";
import ImageSection from "./blocks/ImageSection.astro";
import ReviewsSection from "./blocks/ReviewsSection.astro";
import TeamSection from "./blocks/TeamSection.astro";
import TextContent from "./blocks/TextContent.astro";

interface Props {
  blocks: any[];
}

const { blocks } = Astro.props;
---
{blocks?.[0]._type !== 'hero' && <div class="mt-10" />}
{
  blocks?.map((block) => {
    switch (block._type) {
      case "contentSection":
        return <ContentSection block={block} />;
      case "hero":
        return <HeroSection block={block} />;
      case "heroImageSection":
        return <HeroImageSection block={block} />;
      case "imageSection":
        return <ImageSection block={block} />;
      case "teamSection":
        return <TeamSection block={block} />;
      case "textContent":
        return <TextContent block={block} />;
      case "cardSection":
        return <CardSection block={block} />;
      case "reviewsSection":
        return <ReviewsSection block={block} />;
      case "featuredVoorraadSection":
        return <FeaturedVoorraadSection block={block} />;
      default:
        return null;
    }
  })
}
