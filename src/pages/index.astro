---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Title from "../components/Title.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import Icon from "../components/Icon.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="z-0">
      <div class="h-[100dvh] relative flex flex-col justify-center text-white">
        <video
          autoplay
          playsinline
          muted
          loop
          class="absolute top-0 z-0 left-0 bottom-0 right-0 w-full h-full object-cover"
        >
          <source src="/banner.mp4" type="video/mp4" />
        </video>
        <div
          class="bg-gradient-to-b from-black/0 to-black/50 top-0 left-0 bottom-0 right-0 absolute"
        >
        </div>
        <div class="container relative p-4 flex max-w-4xl mx-auto">
          <div class="space-y-2 md:basis-1/2">
            <Title variant="tertiary" class="text-xl">
              <h1>The Mechanic</h1>
            </Title>
            <h2 class="text-4xl font-semibold">Passie voor auto's</h2>
            <p class="leading-7 text-xl block">
              Meer dan 50 jaar ervaring in het vak, gespecialiseerd in Alfa
              Romeo, Land Rover en Porsche
            </p>
            <div class="flex gap-4 pt-8 flex-col">
              <Button variant="tertiary">Service & Onderhoud</Button>
              <Button variant="outline">Bekijk Voorraad</Button>
            </div>
          </div>
        </div>
        <div class="absolute bottom-4 left-1/2 -translate-x-1/2">
          <Icon name="circle-arrow-down" class="h-10 bottom-4 animate-bounce" />
        </div>
      </div>
      <div class="bg-sand py-16">
        <div class="container p-4 max-w-4xl mx-auto">
          <Title variant="tertiary">
            <span class="text-zinc-500">Onze diensten</span>
          </Title>
          <div class="flex mt-6 flex-col md:flex-row gap-4">
            <Card class="w-full">
              <div slot="title">Service & Onderhoud</div>
              <ul class="mt-3 leading-7 text-neutral-400 text-sm flex-1">
                <li>APK terwijl je wacht</li>
                <li>Schadeafhandeling</li>
                <li>Glasservice</li>
                <li>Poetsservice</li>
                <li>Aankoopkeuring</li>
                <li>Inbouw van accessoires</li>
                <li>Opslag van zomer- en winterbanden</li>
              </ul>
              <a href="/">
                <Icon
                  class="h-10 mt-4 ml-auto hover:translate-x-1 transition-transform"
                  name="circle-arrow-right"
                />
              </a>
            </Card>
            <Card class="w-full">
              <div slot="title">Inkoop en verkoop</div>
              <ul class="mt-3 leading-7 text-neutral-400 text-sm flex-1">
                <li>Aankoop en verkoop (nieuw en gebruikt)</li>
                <li>Cosignatie</li>
                <li>RDW vrijwaren en te naam stellen</li>
                <li>Zoekopdracht</li>
              </ul>
              <a href="/">
                <Icon
                  class="h-10 mt-4 ml-auto hover:translate-x-1 transition-transform"
                  name="circle-arrow-right"
                />
              </a>
            </Card>
            <Card class="w-full">
              <div slot="title">Restauratie</div>
              <ul class="mt-3 leading-7 text-neutral-400 text-sm flex-1">
                <li>APK terwijl je wacht</li>
                <li>Schadeafhandeling</li>
                <li>Glasservice</li>
                <li>Poetsservice</li>
                <li>Aankoopkeuring</li>
                <li>Inbouw van accessoires</li>
                <li>Opslag van zomer- en winterbanden</li>
              </ul>
              <a href="/">
                <Icon
                  class="h-10 mt-4 ml-auto hover:translate-x-1 transition-transform"
                  name="circle-arrow-right"
                />
              </a>
            </Card>
          </div>
        </div>
      </div>
      <Footer />
    </main>
  </body>
</html>
